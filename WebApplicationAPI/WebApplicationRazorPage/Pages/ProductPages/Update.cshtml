@page
@model WebApplicationRazorPage.Pages.ProductPages.UpdateModel
@{
}
<form method="post" asp-action="Update">
    <div class="border p-3 mt-4">
        <div class ="row pb-2">
            <h2 class="text-primary">Edit Product</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <input name="Id" value="@Model.product.Id" class="form-control" type="hidden" />
        <div class="mb-3">
            <label asp-for="@Model.product.Name"></label>
            <input name="Name" value="@Model.product.Name" class="form-control" />       
        </div>
        <div class="mb-3">
            <label asp-for="@Model.product.Provider"></label>
            <input name="Provider" value="@Model.product.Provider" class="form-control" />       
        </div>
        <div class="mb-3">
            <label> Mã thể loaị</label>
            <input name="CategoryID" value="@Model.product.CategoryID" class="form-control" />       
        </div>
       

        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-page="/CategoryPages/Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form>
